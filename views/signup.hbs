<div class="container" style="max-width: 480px; margin: 4rem auto; padding: 0 1rem; font-family: 'Poppins', sans-serif;">
  <h2 style="font-weight: 700; font-size: 2rem; margin-bottom: 2rem; text-align: center;">Create an Account</h2>

  <form action="/signup" method="POST" style="display: flex; flex-direction: column; gap: 1rem;">
    <input 
      type="text" 
      name="name" 
      placeholder="Your Name" 
      required 
      aria-label="Full name"
      style="padding: 0.75rem 1rem; font-size: 1rem; border: 2px solid #6366f1; border-radius: 8px; outline-offset: 2px;"
    >
    <input 
      type="email" 
      name="email" 
      placeholder="Email Address" 
      required 
      aria-label="Email address"
      style="padding: 0.75rem 1rem; font-size: 1rem; border: 2px solid #6366f1; border-radius: 8px; outline-offset: 2px;"
    >
    <input 
      type="password" 
      name="password" 
      placeholder="Password" 
      required 
      aria-label="Password"
      style="padding: 0.75rem 1rem; font-size: 1rem; border: 2px solid #6366f1; border-radius: 8px; outline-offset: 2px;"
    >
    <button type="submit" 
      style="background-color: #6366f1; color: white; border: none; padding: 0.75rem; border-radius: 8px; font-weight: 700; cursor: pointer; transition: background-color 0.3s ease;">
      Sign Up
    </button>
  </form>

  <p style="text-align: center; margin-top: 1.5rem; font-weight: 600;">
    Already have an account? <a href="/login" style="color: #6366f1; text-decoration: underline;">Log in</a>
  </p>
</div>